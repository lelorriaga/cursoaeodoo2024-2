<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sale.order.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <group name="sale_reporting" position="after">
                <group name="appointments" string="Appointments">
                    <field name="appointment_id"/>
                </group>
            </group>
            <page name="other_information" position="after">
                <page name="Insurances" string="Insurances">
                    
                        <field name="insurance_ids"/>
                    
                </page>
            </page>
            <div name="button_box" position="inside">
                <button name="action_view_order_insurances" invisible="insurance_count==0" type="object" class="oe_stat_button" icon="fa-file">
                        <field name="insurance_count" string="Insurances" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>

</odoo>
