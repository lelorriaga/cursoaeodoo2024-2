<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_insurance_view_form" model="ir.ui.view">
        <field name="name">product.template.insurance.view.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="product_variant_id" position="after">
                <field name="is_insurance" widget="boolean_toggle"/>
            </field>
        </field>
    </record>
    <record id="product_template_insurance_view_tree" model="ir.ui.view">
        <field name="name">product.template.insurance.view.tree</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="active" position="after">
                <field name="is_insurance" widget="boolean_toggle"/>
            </field>
        </field>
    </record>
</odoo>
