 <!--<?xml version="1.0" encoding="utf-8"?>-->
 <odoo>
 
    <record id="veterinary_pet_action" model="ir.actions.act_window">
        <field name="name">Pets</field>
        <field name="res_model">veterinary.pet</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new pet</p>
        </field>
    </record>
    <menuitem
        id="veterinary_clinic_menu"
        name="Veterinary Clinic"
        web_icon="veterinary_clinic_laura,static/img/veterinary_module_icon.png"
        sequence="10">
        
        <menuitem
        id="veterinary_management_menu"
        name="Management"
        sequence="10">
            <menuitem
            id="veterinary_pet_menu"
            name="Pets"
            action="veterinary_pet_action"
            sequence="10"/> 
            </menuitem>
    
    </menuitem>
    
    
       


        <record id="veterinary_pet_view_tree" model="ir.ui.view">
            <field name="name">veterinary.pet.view.tree</field>
            <field name="model">veterinary.pet</field>
            <field name="arch" type="xml">
                <tree multi_edit="1" string="Pets">
                    <field name="sequence" widget="handle"/>
                    <field name="name" optional="show"/>
                    <field name="pet_number" optional="show"/>
                    <field name="species_id" optional="show"/>
                    <field name="birthdate" optional="hide"/>
                    <field name="age" optional="hide"/>
                    <field name="weight" optional="show"/>
                    <field name="user_id" optional="show"/>
                    <field name="vaccinated" widget="boolean_toggle" optional="show"/>
                    <field name="last_vaccination_date" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="veterinary_pet_view_form" model="ir.ui.view">
            <field name="name">veterinary.pet.view.form</field>
            <field name="model">veterinary.pet</field>
            <field name="arch" type="xml">
                <form string="Pet">
                    <!--<header>
                        <field name="species" options="{'clickable':1}" widget="statusbar"/>
                    </header>-->
                    <header>
                        <button string="Vaccinated" invisible="vaccinated" name="action_vaccinated" type="object" class="btn-primary"/>
                        <button string="Create Pet Number" invisible="pet_number!=False" name="action_set_pet_number" type="object" class="btn-secondary"/>
                        <button string="Create Insurance"  name="create_insurance" type="object" class="btn-secondary"/>
                        <button string="Surgery complete"  name="surgery_complete_pet" type="object" class="btn-secondary"/>

                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                            <field name="image" widget="image" class="oe_avatar"/>
                        </div>
                        <group>
                            <group>
                                
                                <field name="pet_number"/>
                                <field name="species_id" options="{'no_create':True,'no_quick_create':True,'no_open':True}"/>
                                <field name="vaccinated" widget="boolean_toggle"/>
                                <field name="last_vaccination_date"/>
                                
                            </group>
                            <group>
                                <field name="birthdate" />
                                <field name="age" />
                                <field name="weight" />
                                <field name="adopted" widget="boolean_toggle"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="allergies" string="Allergies">
                                <field name="allergy_ids">
                                    <tree string="Allergies">
                                        <field name="name"/>
                                        <field name="description"/>
                                        <field name="is_severe"/>
                                    </tree>
                                </field>
                                
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
 
 </odoo>
 
  
 


 
